<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group5.cs3750.trainingwheels" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Menu"
            android:label="@string/menu_welcome"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="group5.cs3750.trainingwheels.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
        android:name="group5.cs3750.trainingwheels.Tutorial"
        android:label="@string/title_activity_tutorial"
        android:screenOrientation="portrait"
            >
        <intent-filter>
            <action android:name="group5.cs3750.trainingwheels.TUTORIAL" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </activity>

        <activity
            android:name=".TrainingIDE"
            android:label="@string/training_ide"
            android:screenOrientation="landscape"
            >
            <intent-filter>
                <action android:name="group5.cs3750.trainingwheels.TRAININGIDE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="group5.cs3750.trainingwheels.Settings"
            android:label="@string/title_activity_tutorial"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="group5.cs3750.trainingwheels.SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
