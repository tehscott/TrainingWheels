<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".TrainingIDE"
    android:orientation="horizontal"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programming\nObjects"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_margin="2dp"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="While"
                    android:id="@+id/bWhile"
                    android:tag="while" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="If"
                    android:id="@+id/bIf"
                    android:tag="if" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="For"
                    android:id="@+id/bFor"
                    android:layout_gravity="center_horizontal"
                    android:tag="for" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="String"
                    android:id="@+id/bString"
                    android:layout_gravity="center_horizontal"
                    android:tag="string" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Int"
                    android:id="@+id/bInt"
                    android:layout_gravity="center_horizontal"
                    android:tag="int" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Procedure"
                    android:id="@+id/bProcedure"
                    android:layout_gravity="center_horizontal"
                    android:tag="procedure" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programming\nArea"
                android:id="@+id/programmingAreaLabel"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="2dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:id="@+id/programmingAreaScrollview"
                android:layout_below="@+id/programmingAreaLabel"
                android:tag="programmingAreaScrollview"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/programmingArea"
                    android:tag="programmingArea"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test"/>
                </LinearLayout>
            </ScrollView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run"
                android:layout_margin="2dp"
                android:id="@+id/bRun"
                android:textColor="@android:color/holo_green_dark"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Output"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/outputText"
                android:tag="outputText"
                android:text="Test"
                android:padding="2dp"
                android:background="@android:color/white"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
