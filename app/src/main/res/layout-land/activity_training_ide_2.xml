<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".TrainingIDE"
    android:background="@color/ide_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_bar_container"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button_bar"
            android:background="@color/back_button_bar_bg"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/run_button"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/top_bar_container"
        android:layout_above="@+id/bottom_bar_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:id="@+id/button_container">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="While"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_bg"
                        android:id="@+id/bWhile"
                        android:tag="while"
                        android:layout_marginBottom="5dp"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="If"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_bg"
                        android:id="@+id/bIf"
                        android:tag="if"
                        android:layout_marginBottom="5dp" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="For"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_bg"
                        android:id="@+id/bFor"
                        android:layout_gravity="center_horizontal"
                        android:tag="for"
                        android:layout_marginBottom="5dp" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Print"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_bg"
                        android:id="@+id/bPrint"
                        android:layout_gravity="center_horizontal"
                        android:tag="print"
                        android:layout_marginBottom="5dp" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Variable"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_bg"
                        android:id="@+id/bVariable"
                        android:layout_gravity="center_horizontal"
                        android:tag="variable"
                        android:layout_marginBottom="5dp" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Function"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_bg"
                        android:id="@+id/bProcedure"
                        android:layout_gravity="center_horizontal"
                        android:tag="function"
                        android:layout_marginBottom="5dp" />
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="String"
                        android:textColor="@android:color/white"
                        android:background="@drawable/rounded_button_bg"
                        android:id="@+id/bString"
                        android:layout_gravity="center_horizontal"
                        android:tag="string"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <group5.cs3750.trainingwheels.canvas.CanvasView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/canvas_view"
            android:layout_weight="1"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/output_container"
            android:layout_weight="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/outputText"
                android:tag="outputText"
                android:text="\n\n\n\n\n"
                android:padding="2dp"
                android:background="@android:color/white"/>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_bar_container"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_button"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>